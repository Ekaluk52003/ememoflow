{$DOMAIN} {
    # Static files
    handle /static/* {
        uri strip_prefix /static
        root * /code/staticfiles
        file_server
    }

    # Media files
    handle /media/* {
        uri strip_prefix /media
        root * /code/media
        file_server
    }

    # SSE specific configuration
    handle /document/notifications/stream/* {
        reverse_proxy web:8000 {
            header X-Forwarded-Host {host}
            header X-Forwarded-Proto {scheme}
            header X-Real-IP {remote_host}
            health_path /health/
            health_interval 30s
            health_timeout 10s
        }
    }

    # Default reverse proxy
    handle {
        reverse_proxy web:8000 {
            header X-Forwarded-Host {host}
            header X-Forwarded-Proto {scheme}
            header X-Real-IP {remote_host}
        }
    }

    # Logging
    log {
        output stdout
        format json
        level INFO
    }
}