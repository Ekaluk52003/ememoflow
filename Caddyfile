{$DOMAIN} {
    # Static files
    handle /static/* {
        uri strip_prefix /static
        root * /code/staticfiles
        file_server
    }

    # Media files
    handle /media/* {
        uri strip_prefix /media
        root * /code/media
        file_server
    }

    # SSE specific configuration
    handle /document/notifications/stream/* {
        reverse_proxy web:8000
    }

    # Default reverse proxy
    handle {
        reverse_proxy web:8000
    }

    log {
        output stdout
        format json
    }
}