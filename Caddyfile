{$DOMAIN} {
    # Static files
    handle /static/* {
        uri strip_prefix /static
        root * /code/staticfiles
        file_server
    }

    # Media files
    handle /media/* {
        uri strip_prefix /media
        root * /code/media
        file_server
    }

    # SSE specific configuration
    handle /document/notifications/stream/* {
        reverse_proxy web:8000 {
            transport http {
                keepalive_idle 300s
                keepalive_interval 60s
                keepalive_retries 5
                max_conns_per_host 0
            }
            health_uri /health/
            health_interval 30s
            health_timeout 10s
            buffer_requests off
            flush_interval -1
        }
    }

    # Default reverse proxy
    handle {
        reverse_proxy web:8000 {
            header_up X-Real-IP {remote_host}
            header_up Host {host}
            header_up X-Forwarded-Proto {scheme}
        }
    }

    log {
        output stdout
        format json
        level INFO
    }
}